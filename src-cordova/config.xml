<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bibliographya.android" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Биографии</name>
    <description>
      Расскажите о себе и станьте известными!
    </description>
    <author email="bibliographya.help@gmail.com" href="https://bibliographya.com">
        Bibliographya
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="ShowSplashScreenSpinner" value="false" />
    <platform name="android">
        <allow-intent href="market:*" />
        <splash density="land-hdpi" src="res/screen/android/screen-hdpi-land.png" />
        <splash density="land-ldpi" src="res/screen/android/screen-ldpi-land.png" />
        <splash density="land-mdpi" src="res/screen/android/screen-mdpi-land.png" />
        <splash density="land-xhdpi" src="res/screen/android/screen-xhdpi-land.png" />
        <splash density="port-hdpi" src="res/screen/android/screen-hdpi-port.png" />
        <splash density="port-ldpi" src="res/screen/android/screen-ldpi-port.png" />
        <splash density="port-mdpi" src="res/screen/android/screen-mdpi-port.png" />
        <splash density="port-xhdpi" src="res/screen/android/screen-xhdpi-port.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-plugin-device" spec="^2.0.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="cordova-plugin-customurlscheme" spec="^4.4.0">
        <variable name="URL_SCHEME" value="bibliographya" />
        <variable name="ANDROID_SCHEME" value=" " />
        <variable name="ANDROID_HOST" value=" " />
        <variable name="ANDROID_PATHPREFIX" value="/" />
    </plugin>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <engine name="android" spec="^7.1.4" />
</widget>
